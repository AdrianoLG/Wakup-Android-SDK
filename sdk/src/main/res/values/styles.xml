<resources>

    <!-- Base application theme. -->
    <style name="WakupTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/WakupTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAppearance">@style/WakupTheme.Text</item>
    </style>

    <style name="WakupTheme.ActionBarOverlay">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- Theme without ActionBar shadow (inherits main theme) -->
    <style name="WakupTheme.ActionBarOverlay.NoShadow">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WakupTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="WakupTheme.Dialog" parent="WakupTheme.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="WakupTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/WakupTheme.ActionBar.Title</item>
        <item name="android:icon">@drawable/ic_action_logo</item>
        <item name="android:displayOptions">showTitle|showHome</item>
    </style>

    <!-- ActionBar title text -->
    <style name="WakupTheme.ActionBar.Title"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="WakupTheme.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontPath">fonts/Aller_Lt.ttf</item>
    </style>

    <style name="WakupTheme.Text.Title">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="fontPath">fonts/Aller_Bd.ttf</item>
        <item name="android:color">@color/bold_text</item>
    </style>

    <style name="WakupTheme.Text.Italic">
        <item name="fontPath">fonts/Aller_LtIt.ttf</item>
    </style>

    <style name="WakupTheme.Text.Regular">
        <item name="fontPath">fonts/Aller_Rg.ttf</item>
    </style>

    <style name="WakupTheme.Text.Bold">
        <item name="fontPath">fonts/Aller_Bd.ttf</item>
    </style>

    <style name="WakupTheme.Text.OfferShortDesc">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/offer_short_desc</item>
        <item name="android:background">@drawable/offer_short_desc_bg</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="fontPath">fonts/AllerDisplay.ttf</item>
    </style>

    <style name="WakupTheme.Text.SearchTitle">
        <item name="fontPath">fonts/Aller_Rg.ttf</item>
    </style>

    <style name="WakupTheme.Text.SearchDetail">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/light_text</item>
    </style>

</resources>
