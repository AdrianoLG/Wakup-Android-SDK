<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OffersActivity">

    <com.yellowpineapple.wakup.sdk.views.PullToRefreshLayout
        android:id="@+id/ptr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.etsy.android.grid.StaggeredGridView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:item_margin="8dp" />

            <ScrollView
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="40dp"
                    android:gravity="center">

                    <com.yellowpineapple.wakup.sdk.views.ColorImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_warning"
                        app:imageColor="@color/light_text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_results"
                        android:gravity="center"
                        android:textColor="@color/light_text"
                        android:layout_marginTop="20dp"
                        style="@style/WakupTheme.Text.Title"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_search_results"
                        android:gravity="center"
                        android:textColor="@color/light_text"
                        android:layout_marginTop="20dp"
                        style="@style/WakupTheme.Text"/>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </com.yellowpineapple.wakup.sdk.views.PullToRefreshLayout>

</RelativeLayout>
