<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wk_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.yellowpineapple.wakup.sdk.views.OfferActionButton
            android:id="@+id/btnRestaurants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:buttonText="@string/wk_category_restaurants"
            app:buttonIcon="@drawable/wk_cat_restaurants"
            app:buttonIconColor="@color/wk_search_cat_restaurants"
            app:buttonFontSize="@dimen/wk_small_text"/>

        <com.yellowpineapple.wakup.sdk.views.OfferActionButton
            android:id="@+id/btnShopping"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:buttonText="@string/wk_category_shopping"
            app:buttonIcon="@drawable/wk_cat_shopping"
            app:buttonIconColor="@color/wk_search_cat_shopping"
            app:buttonFontSize="@dimen/wk_small_text"/>

        <com.yellowpineapple.wakup.sdk.views.OfferActionButton
            android:id="@+id/btnLeisure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:buttonText="@string/wk_category_leisure"
            app:buttonIcon="@drawable/wk_cat_leisure"
            app:buttonIconColor="@color/wk_search_cat_leisure"
            app:buttonFontSize="@dimen/wk_small_text"/>

        <com.yellowpineapple.wakup.sdk.views.OfferActionButton
            android:id="@+id/btnServices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:buttonText="@string/wk_category_services"
            app:buttonIcon="@drawable/wk_cat_services"
            app:buttonIconColor="@color/wk_search_cat_services"
            app:buttonFontSize="@dimen/wk_small_text"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wk_search_header_bg"/>

</LinearLayout>