<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yellowpineapple.wakup.sdk" >

    <application>

        <activity
            android:name=".activities.OffersActivity"
            android:label="@string/app_name"
            android:theme="@style/WakupTheme.ActionBarOverlay.NoShadow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="con.twincoders.twinpush.sdk.PUSH_NOTIFICATION_RECEIVED" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OfferDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/WakupTheme.ActionBarOverlay">
        </activity>

        <activity
            android:name=".activities.SavedOffersActivity"
            android:label="@string/my_offers"
            android:theme="@style/WakupTheme.ActionBarOverlay">
        </activity>

        <activity
            android:name=".activities.ModalTextActivity"
            android:theme="@style/WakupTheme.Dialog"
            android:noHistory="true"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".activities.OfferMapActivity"
            android:theme="@style/WakupTheme"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activities.StoreOffersActivity"
            android:theme="@style/WakupTheme.ActionBarOverlay">
        </activity>

        <activity
            android:name=".activities.WebViewActivity"
            android:theme="@style/WakupTheme"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activities.SearchActivity"
            android:theme="@style/WakupTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activities.SearchResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/WakupTheme.ActionBarOverlay">
        </activity>

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBdF9IVhdSI71514EAsMLmTjHNsixO9vvM"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>
