<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>
    </style>

    <style name="AppTheme.ActionBarOverlay">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Title</item>
        <item name="android:icon">@drawable/ic_action_logo</item>
        <item name="android:displayOptions">showTitle|showHome</item>
    </style>

    <!-- ActionBar title text -->
    <style name="AppTheme.ActionBar.Title"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="AppTheme.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="fontPath">fonts/Aller_Lt.ttf</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="fontPath">fonts/Aller_Bd.ttf</item>
        <item name="android:color">@color/bold_text</item>
    </style>

    <style name="AppTheme.Text.Italic">
        <item name="fontPath">fonts/Aller_LtIt.ttf</item>
    </style>

    <style name="AppTheme.Text.OfferShortDesc">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/offer_short_desc_bg</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="fontPath">fonts/AllerDisplay.ttf</item>
    </style>


</resources>
